<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 密码 text -->
    <TextView
        android:id="@+id/revise_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_username"
        android:layout_marginTop="3dp"
        android:text="@string/revise_label_password" />

    <EditText
        android:id="@+id/et_revise_password1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/revise_password"
        android:inputType="textPassword"
        android:hint="请输入新密码"
        android:singleLine="true" />
    <!-- 密码 text -->
    <TextView
        android:id="@+id/revise_repassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_username"
        android:layout_marginTop="3dp"
        android:text="@string/revise_label_password" />

    <EditText
        android:id="@+id/et_revise_repassword1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/revise_repassword"
        android:inputType="textPassword"
        android:hint="请确认密码"
        android:singleLine="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_revise_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_revise_quxiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>